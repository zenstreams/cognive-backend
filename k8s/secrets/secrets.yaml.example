---
# Example secrets file - DO NOT commit actual secrets!
# Copy this file to secrets.yaml and fill in your actual values
# Then apply with: kubectl apply -f secrets/secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: cognive-secrets
  namespace: cognive
type: Opaque
stringData:
  # PostgreSQL credentials
  postgres-user: "cognive"
  postgres-password: "CHANGEME_SECURE_PASSWORD"
  
  # Database connection strings (update with your actual host/credentials)
  database-url: "postgresql://cognive:CHANGEME_SECURE_PASSWORD@postgres:5432/cognive"
  database-url-async: "postgresql+asyncpg://cognive:CHANGEME_SECURE_PASSWORD@postgres:5432/cognive"
  database-read-urls: "postgresql://cognive:CHANGEME_SECURE_PASSWORD@postgres:5432/cognive"
  database-read-urls-async: "postgresql+asyncpg://cognive:CHANGEME_SECURE_PASSWORD@postgres:5432/cognive"
  
  # RabbitMQ credentials
  rabbitmq-user: "cognive"
  rabbitmq-password: "CHANGEME_SECURE_PASSWORD"
  rabbitmq-url: "amqp://cognive:CHANGEME_SECURE_PASSWORD@rabbitmq:5672/cognive"
  
  # MinIO credentials
  minio-access-key: "CHANGEME_ACCESS_KEY"
  minio-secret-key: "CHANGEME_SECRET_KEY"
  
  # Application secrets
  secret-key: "CHANGEME_LONG_RANDOM_STRING_FOR_JWT"
  
  # Optional: External service credentials
  # openai-api-key: "sk-..."
  # anthropic-api-key: "sk-ant-..."

---
# Basic auth secret for Flower UI
apiVersion: v1
kind: Secret
metadata:
  name: flower-auth
  namespace: cognive
type: Opaque
stringData:
  # Generated with: htpasswd -nb admin password | base64
  # Default: admin/admin (CHANGE IN PRODUCTION!)
  users: "admin:$apr1$H6uskkkW$IgXLP6ewTrSuBkTrqE8wj/"






